<Page xmlns:Controls="clr-namespace:NutstoreClient.Controls"  x:Class="NutstoreClient.Views.WelcomeWizard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NutstoreClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="WelcomeWizard">

    <Grid MinHeight="300" MinWidth="400" Background="AliceBlue" >
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!--上半部提示图-->
        <Grid >
            <Controls:SilderView Width="auto" Height="auto" />
        </Grid>

        <!--下半部按钮-->
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                <Button Margin="0,20,0,10" Content="登陆" Width="100" Height="40" />
                <Button Margin="0,10,0,0" Content="注册坚果云账户" Width="100" Height="40" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
